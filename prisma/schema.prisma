// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Habit {
  // @id to make id a PK and @default(uuid()) to generate an uuid as id instead of a numeric sequence
  id String @id @default(uuid())
  title String
  created_at DateTime

  // @@map to rename table name
  @@map("habits")
}